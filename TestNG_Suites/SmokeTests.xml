<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite" parallel="methods" thread-count="5">

	<groups>
        <run>
            <include name="Smoke"/>
        </run>
     </groups>

<listeners>
	<listener class-name="swagLabsMain.utils.AllureListener"/>
</listeners>

  <test  name="Validation Full Order Test">
    <classes>
      <class name="swagLabsTests.tests.e2e.SubmittingOrderTests"/>
    </classes>   
  </test>
  
  <test name="Validating Adding and Removing items Test">
    <classes>
      <class name="swagLabsTests.tests.productManagement.AddingAndRemovingProductsTest"/>
    </classes>   
  </test>
  
  <test name="Validating Logins Test">
    <classes>
      <class name="swagLabsTests.tests.login.ValidLoginTests"/>
    </classes>   
  </test>
  
  <test name="Adding and Removing Products Functionality Test">
   	<classes>
    	<class name="swagLabsTests.tests.cart.CheckingCartAfterLogoutTests"/>
    </classes>
  </test>
  
  <test name="Checkout Error Validations Test">
   	<classes>
    	<class name="swagLabsTests.tests.checkout.CheckoutErrorValidationsTests"/>
    </classes>
  </test>
  
</suite> <!-- Suite -->
