<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite">

	<groups>
        <run>
            <include name="Smoke"/>
        </run>
     </groups>

<listeners>
	<listener class-name="SwagLabs.TestComponents.Listeners"/>
</listeners>

  <test thread-count="5" name="Validation Full Order Test">
    <classes>
      <class name="SwagLabs.Tests.SubmittingOrderTests"/>
    </classes>   
  </test>
  
  <test thread-count="5" name="Validating Adding and Removing items Test">
    <classes>
      <class name="SwagLabs.Tests.AddingAndRemovingProductsTest"/>
    </classes>   
  </test>
  
  <test thread-count="5" name="Validating Logins Test">
    <classes>
      <class name="SwagLabs.Tests.ValidLoginTests"/>
    </classes>   
  </test>
  
  <test thread-count="5" name="Adding and Removing Products Functionality Test">
   	<classes>
    	<class name="SwagLabs.Tests.CheckingCartAfterLogoutTests"/>
    </classes>
  </test>
  
</suite> <!-- Suite -->
