<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/test-execution.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/test-execution.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Screenshot-specific logger -->
    <appender name="SCREENSHOT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/screenshot.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/screenshot.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>
    
    <!-- Specific logger for test components -->
    <logger name="swagLabsMain.TestComponents" level="DEBUG" />
    <logger name="swagLabsMain.utils" level="DEBUG" />
    
    <!-- Screenshot utility logger -->
    <logger name="swagLabsMain.utils.ScreenshotUtility" level="DEBUG">
        <appender-ref ref="SCREENSHOT" />
    </logger>
    
    <!-- Allure listener logger -->
    <logger name="swagLabsMain.utils.AllureListener" level="DEBUG">
        <appender-ref ref="SCREENSHOT" />
    </logger>
    
    <!-- Selenium WebDriver logger -->
    <logger name="org.openqa.selenium" level="WARN" />
    
    <!-- TestNG logger -->
    <logger name="org.testng" level="INFO" />
    
    <!-- Allure logger -->
    <logger name="io.qameta.allure" level="INFO" />
</configuration> 